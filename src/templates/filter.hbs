<div class="inner">
	<ul role="presentation">
		<li class="filter-header">
			<span class="filter-title">Filters</span><span class="facet-count">({{facetCount}})</span>
	  		<button data-action="clear-all" class="btn clear-all">Clear All</button>
  		</li>
	  	<li class="divider"></li>
		{{#each filters}}
	  		<li role="facet" class="facet-group">
		  		<span role="button" data-action="toggle" class="toggle"></span>
		  		<span role="label" data-value="{{name}}" class="filter-group-name">{{displayName}}</span>
		  		<ul role="group">
		  			{{#each values}}
			  		<li class="filter-facet">
			  			<input data-group="{{../name}}" data-facet="{{name}}" type="checkbox"{{#if selected}} checked="true"{{/if}}>
			  			<span class="filter-facet-name">{{displayName}}</span>
			  		</li>
			  		{{/each}}
		  		</ul>
		  	</li>
		  	{{#unless @last}}	
	  		<li class="divider"></li>
	  		{{/unless}}
  		{{/each}}
	</ul>
</div>